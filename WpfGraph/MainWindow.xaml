<Window x:Class="WpfGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local1="clr-namespace:WpfGraph"
        Title="Table Builder" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button x:Name="BtnPath" Click="BtnPathClick" Grid.Column="0"  Content="Путь к файлу" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="BtnGraph" Click="BtnGraphClick"  Grid.Row="1"  Content="Построить график" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtCheck" Grid.Row="2"/>
        <ListView  Grid.Column="1" Grid.RowSpan="2" x:Name="ListViewPeople" >
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="ElementX" Header="Vector X" Width="100" DisplayMemberBinding="{Binding Path=VectorX}"/>
                    <GridViewColumn x:Name="ElementY" Header="Vector Y" Width="150" DisplayMemberBinding="{Binding Path=VectorY}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
