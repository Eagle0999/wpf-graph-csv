<Window x:Class="WpfGraph.Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local1="clr-namespace:WpfGraph"
        Title="График" MinHeight="600" MinWidth="700" MaxHeight="700" MaxWidth="800" WindowStyle="ThreeDBorderWindow">
    <Window.DataContext>
        <local1:MainViewModel/>
    </Window.DataContext>
        <Grid>
            <Grid  >
                <Grid.RowDefinitions >
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions >
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

       

            <oxy:Plot Grid.ColumnSpan="2" Grid.RowSpan="2" Title="{Binding Title}"  >
                <oxy:Plot.Series>
                    <oxy:LineSeries ItemsSource="{Binding Points}"/>
                </oxy:Plot.Series>
            </oxy:Plot>
        </Grid>
    </Grid>
    
</Window>
